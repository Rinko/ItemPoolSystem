<h1>Listing books</h1>

<table>
  <tr>
    <th>Publisher</th>
    <th>Subject</th>
    <th>Grade</th>
    <th>Term</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.publisher %></td>
    <td><%= get_parameters_value_by_key(ParamterScope::SUBJECT,book.subject) %></td>
    <td><%= get_parameters_value_by_key(ParamterScope::GRADE,book.grade) %></td>
    <td><%= get_parameters_value_by_key(ParamterScope::TERM,book.term) %></td>
    <td><%= book.title %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Manage Structure', book_structures_path(book) %></td>
  </tr>
<% end %>
</table>

